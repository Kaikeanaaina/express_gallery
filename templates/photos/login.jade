extends ./../layout

block content
    h2 Log In
    form(method="POST" action="/login" enctype="application/x-www-form-urlencoded")#form1
      p username:
        br
        input(type='text' size="80" name="username")
      br
      p password:
        br
        input(type='text' size="80" name="password")
      br
      button(type="submit" form="form1" value="Submit")#submit Submit
    if messages
      div #{messages}

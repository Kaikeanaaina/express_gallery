extends ./../layout

block content
    form(method="POST" action="/gallery" enctype="application/x-www-form-urlencoded")#form1
      p title:
        br
        input(type='text' size="80" name="title")
      br
      p description:
        br
        textarea(rows="20" cols="80" name="description" form="form1")
      br
      p link:
        br
        input(type='text' size="80" name="link")
      br
      button(type="submit" form="form1" value="Submit")#submit Submit

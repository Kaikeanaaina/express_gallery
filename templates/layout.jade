    div#navbar
      if !loggedIn
        div.navItemBox
          a(href='/logIn').navItem#logIn
            |Log In
        div.navItemBox#register
          a(href='/register').navItem
            |Register
      if loggedIn
        div.navItemBox#create
          a(href='/gallery/new').navItem
            |Create
        div.navItemBox#logOut
          a(href='/logOut').navItem
            |Log Out
    block content
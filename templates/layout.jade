doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    link(type='text/css' rel='stylesheet' href='/css/styles.css')
    link(href='https://fonts.googleapis.com/css?family=Amatic+SC:400,700&subset=latin,latin-ext' rel='stylesheet' type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Noticia+Text&subset=latin,latin-ext' rel='stylesheet' type='text/css')
    title Ride A Long
  body
    div#top
      div#topTitle
        a(href='/' id='h1Title')
